    <style name="Theme.DailyQoutesMotivationalCustom" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorWhite</item>
        <item name="cardBackgroundColor">@color/lightColor</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/lightGray</item>
        <item name="recyclerViewStyle">@color/white</item>
        <item name="collapsingToolbarLayoutStyle">@color/white</item>
        <item name="colorButtonNormal">@color/grayLightDark</item>
        <item name="sliderStyle">@color/sliderColor</item>
        <item name="tabTextColor">@android:color/black</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="colorBackgroundFloating">@color/sliderColor</item>
    </style>

    <style name="Theme.DailyQoutesMotivationalCustom.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="NavigationTheme" parent="Theme.DailyQoutesMotivationalCustom">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
    <style name="ToolBarStyle" parent="Theme.MaterialComponents.CompactMenu">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

</resources>